@model System.Data.DataTable

@{
    ViewBag.Title = "installments";
}

<head>
    <style>
        nav.navbar.bootsnav.navbar-fixed {
            overflow: scroll;
            height: 100%;
        }
    </style>
</head>
@using (Html.BeginForm())
{
    <h2 style="padding-top:80px;text-align:center">INSTALLMENTS PLAN</h2>
    <table class="table table-bordered table-striped">
        <tr>
            <th display="none">
                Installment Id
            </th>
            <th>Loan Id</th>
            <th>Installment Number</th>
            <th>Installment Date</th>
            <th>Installment Money</th>
            <th>Is Paid</th>
          
        
        </tr>
        @for (int i = 0; i < Model.Rows.Count; i++)
        {
        <tr>
            <td display="none">@Model.Rows[i][0]</td>
            <td display="none">@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>
            <td>@Model.Rows[i][4]</td>
            <td>@Model.Rows[i][5]</td>


        </tr>
        }
    </table>
}

