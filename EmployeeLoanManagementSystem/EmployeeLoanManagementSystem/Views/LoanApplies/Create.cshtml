@model EmployeeLoanManagementSystem.Models.LoanApply

@{
    /**/

    ViewBag.Title = "Create";
  
}


<html>


<head>



    <style type="text/css">

        body {
        }
        .container{
            overflow:auto;
            
        }

        .registration {
            color: black;
            font-size: 40px;
            font-family: Agency FB;
            font-weight: 700;
            border-bottom-style: ridge;
        }

        .row {
        }

        nav.navbar.bootsnav.navbar-fixed{
            overflow:scroll;
            height:100%;
        }
        ::-webkit-scrollbar-thumb {
            border-radius: 4px;
            background-color: rgba(0,0,0,.5);
            -webkit-box-shadow: 0 0 1px rgba(255,255,255,.5);
        }


        .btn.hover {
            background-color: aqua;
        }

        label {
            font-size: 22px;
        }

        .btn-danger {
            border-radius: 0px;
        }
    </style>

</head>
<body>
    <div class="container">


        <div class="col-md-8 col-md-offset-3">
            <img src="/images/syslogo.png" align="left" style="height:140px; padding-top:15px;padding-left:350px">
        </div>
        <center style="text-align:center ;
	padding-top: 130px;padding-bottom:20px"><b class="registration">LOAN APPLICATION FORM</b></center>
        <hr />
        <div class="col-lg-6 col-md-offset-3">
            <h4 align="left"> CONTACT INFORMATION</h4>
            <hr />

            <div class="form-group">
                <h5>Name :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Email :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Gender :</h5>

                <input align="left" type="radio" name="name" style="font-size: 18px;background-color:white; height:30px;width:50px" class="Male" /><p style="font-size: 15px">Male</p> <br>
                <input align="left" type="radio" name="name" style="font-size: 18px;background-color:white; height:30px;width:50px" class="Female" /><p style="font-size: 15px">Female</p><br>
            </div>
            <div class="form-group">
                <h5>Date of Birth :</h5>
                <input type="datetime" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Address :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Contact No  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <hr />
            <h4 align="left"> EMPLOYEE INFORMATION</h4>
            <hr />
            <div class="form-group">
                <h5>Designation  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Department  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Monthly Income  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Provident Fund  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5>Account No.  :</h5>
                <input type="text" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <hr />
            <h4 align="left">APPLY FOR LOAN</h4>
            <hr />
            <div class="form-group">
                <h5>Loan Category :</h5>
                <br />
                <input align="left" type="radio" name="name" style="height:30px;width:50px" class="PFUND" /><p style="font-size: 15px">
                    Loan Against Provident Fund<br>
                    <input align="left" type="radio" name="name" style="height:30px;width:50px" class="General" />
                <p style="font-size: 15px">General Loan<br>
            </div>
            <div class="form-group">
                <h5>Loan Purpose :</h5>
                <br />
                <p style="" font-size: 15px">You are required to select the category written below if you have choosen loan against provident fund</p><br />
                <input align="left" type="radio" name="name" style=" height:30px;width:50px" class="Property" /><p style="font-size: 15px">
                    Property Fund<br>
                    <input align="left" type="radio" name="name" style=" height:30px;width:50px" class="Male" />
                <p style="font-size: 15px">Automobile Fund<br>
            </div>
            <div class="form-group">
                <h5>Maximum Loan Granted  :</h5>
                <input type="number" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Loan Requested  :</h5>
                <input type="number" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Maximum Number Of Installments  :</h5>
                <input type="number" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Installments Acquired  :</h5>
                <input type="number" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Installments Start Date  :</h5>
                <input type="datetime" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Installments End Date  :</h5>
                <input type="datetime" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <div class="form-group">
                <h5> Installments Money  :</h5>
                <input type="number" name="name" style="font-size: 20px;height:50px;width:550px" />
            </div>
            <hr />
            <h4 align="left">ACKNOWLEDGEMENT</h4>
            <hr />
            <div class="form-group">

                <p style="" font-size: 15px">I hereby agree that the information given is true, accurate and complete as of the date of this application submission </p><br />
                <p style="font-size: 15px">Yes<input align="left" type="radio" name="name" style=" height:30px;width:50px" class="Male" />
            </div>
            <div class="form-group">
                <p>The employee needs to download the template. Print it and fill it. Upload the image of the filled agreement document  in the upload button tab below</p>
                <a href="~/LoanApplies/Download">
                    <input class="btn " style="font-family:Arial;font-size:12px;height:50px;width:160px" type="button" value="Download" />
                </a>
            </div>
            <div class="form-group">
                <p>Upload the image of the filled agreement document  in the upload button tab below</p>
                <input type="file" id="image1" name="image1" />
                <a href="~/LoanApplies/Download">
                    <input class="btn " style="font-family:Arial;font-size:12px;height:50px;width:160px" type="button" value="Download" />
                </a>
            </div>
            <!-- <div class="form-group">
                    <a href="~/Admin/Dashboard">
                        <input class="btn " style="font-family:Arial;font-size:18px;height:50px;width:120px" type="button" value="Log In" />
                    </a>
                    <a href="~/Admin/Reset">
                        <input class="btn " style="font-family:Arial;font-size:18px;height:50px;width:150px" type="button" value="Reset Password" />
                    </a>
                </div>
            </form>
        </div>
    </div>-->
        </div>
        </div>

</body>
</html>
